<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cookieContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/minecraftworld"
    tools:context=".CookieActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/cookieClickerTitle"
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@color/semi_transparent_black"
            android:gravity="center"
            android:text="@string/cookieClickerTitle"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/cookieClickerCounter"
            android:layout_width="233dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@color/semi_transparent_black"
            android:gravity="center"
            android:text="@string/cookieClickerCounter"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/buttonCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@color/semi_transparent_black"
            android:text="@string/cookiePlaceholderText"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/semi_transparent_black"
            android:textColor="@android:color/white"
            android:text="@string/backButton"
            android:layout_margin="8dp"
            android:onClick="goBackToMainMenu" />

        <Button
            android:id="@+id/shopButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/semi_transparent_black"
            android:textColor="@android:color/white"
            android:text="@string/shop"
            android:layout_margin="8dp" />
    </LinearLayout>

</FrameLayout>
